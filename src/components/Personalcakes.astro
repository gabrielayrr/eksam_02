---
import Cherrybutton from './Cherrybutton.astro';
import Kontakt from '../pages/kontakt.astro';
const {image, title, subtitle , text, sluttext,} = Astro.props;
---


<section class=card>
    <img src={image}/>
    <h2>{title}</h2>
    <h3>{subtitle}</h3>
    <p>{text}</p>
    
</section>
<section>
    <br>
<p><b>{sluttext}</b></p>
</section>

<section class=button>
<Cherrybutton  text="SEND OS EN MAIL"></Cherrybutton>
</section>
<section class="spørgsmål">

 <h3>
    Har du generelle spørgsmål til os?
    <br>
    Find vores kontakt side <a href="/kontakt">her</a></p></h3>
</section>


<style>
     .card img{
    width: 25rem;
 }
 .card{
    position: relative;
    margin-top: 5rem;
    width: 100%; 
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.3s ease-out;
}

.card.show {
    opacity: 1;
    transform: translateY(0);
}
 
.button{
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 5rem;
    }
.spørgsmål{
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 5rem;
    color: black;
    .a{
    color: black;
}
    
}
.a{
    color: black;
}
</style>

<script>
   document.addEventListener('DOMContentLoaded', function() {
    // Select the card element
    const card = document.getElementById('card');

    // Function to check if the card is in the viewport
    function checkScroll() {
        const rect = card.getBoundingClientRect();
        const windowHeight = window.innerHeight;

        // If the top of the card is within the viewport, add the "show" class
        if (rect.top <= windowHeight && rect.bottom >= 0) {
            card.classList.add('show');
        } else {
            card.classList.remove('show');
        }
    }

    // Listen for scroll events to trigger the check
    window.addEventListener('scroll', checkScroll);

    // Trigger the check on page load
    checkScroll();  // This ensures the check is done right after page load
});

</script>
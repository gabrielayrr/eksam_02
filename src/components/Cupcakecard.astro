---
const {image, header, text, position, name} = Astro.props;
---


<article class={`card ${position}`}>
    <img src={image} alt="Small cupcake" />
    <p><b>{header}</b></p>
    <p>{text}</p>

</article>

  <style>

.cupcakecards{

    position: relative;
    width: 100%;
}
h2.{
    position: sticky;
    top: 20%;
}
.card {
    position: sticky;
    top: 20%; 
  background: #f5f4f130;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  transform: scale(0.8) translateY(100px);
  opacity: 0;
  transition: transform 0.6s ease, opacity 0.6s ease;
  line-height: normal;
  font-size: 24px;
  color: #333;
  height: 200vh;
      
}
/* global css */
h1 {
  font-family: fino-sans, sans-serif;
  font-style: normal;
  font-weight: 400;
  font-size: 90px;
  text-align: center;
}
h2 {
  font-family: fino-sans, sans-serif;
  font-style: normal;
  font-weight: 400;
  font-size: 60px;
  text-align: center;
}
h3 {
  font-family: adobe-caslon-pro, serif;
  font-style: normal;
  font-weight: 400;
  font-size: 40px;
  color: #99040B;
  text-transform: uppercase;
}

p {
  font-family: adobe-caslon-pro, serif;
  font-style: normal;
  font-weight: 400;
  font-size: 24px;
}
h4{
  font-family: adobe-caslon-pro, serif;
  font-style: normal;
  font-weight: 400;
  font-size: 28px;
  color: #99040B;
  
}
/* global css */


.left {
  align-self: flex-start;
  margin-left: 2rem;
  width: 40rem;
  margin-top: 0,1rem;
}

.right {
  align-self: flex-end;
  margin-right: 2rem;
  width: 40rem; /* Sikrer passende bredde */
}

/* Animations */
.card .card1 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 0.2s;
    z-index: 4;
}

.card .card2 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 0.6s;
    z-index: 3; 
}

.card .card3 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 1s;
    z-index: 2; 
}

.card .card4 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 1.4s;
    z-index: 1; 
}

@keyframes reveal {
    0% {
        transform: scale(0.8) translateY(100px);
        opacity: 0;
    }
    100% {
        transform: scale(1) translateY(0);
        opacity: 1;
    }
}

 .card img{
    width: 10rem;
    align-self: center;
    margin-bottom: :0;
 }
.card.show {
    opacity: 1;
    transform: translateY(0);
}

</style>
<script>
document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".card");

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("show");
            }
        });
    }, {
        threshold: 0.2, // Trigger, nÃ¥r 20% af kortet er synligt
    });

    cards.forEach((card) => observer.observe(card));
});
</script>
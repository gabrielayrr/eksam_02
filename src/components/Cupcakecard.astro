---
const {image, header, text, position, name} = Astro.props;
---


<article class={`card ${position}`}>
    <img src={image} alt="Small cupcake" />
    <p><b>{header}</b></p>
    <p>{text}</p>

</article>

  <style>

.cupcakecards{

    position: relative;
    width: 100%;
}
.spacer {
    height: 100vh; /* Placeholder for spacing */
}
.card {
  background: #f5f4f130;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
  transform: scale(0.8) translateY(100px);
    opacity: 0;
    transition: transform 0.6s ease, opacity 0.6s ease;
    border-radius: 12px;
    text-align: center;
    line-height: 200px;
    font-size: 24px;
    color: #333;
    z-index: 1;
  
}

.left {
  align-self: flex-start;
  margin-left: 2rem;
  width: 40rem;
  margin-top: 0,1rem;
}

.right {
  align-self: flex-end;
  margin-right: 2rem;
  width: 40rem; /* Sikrer passende bredde */
}

/* Animations */
.card .card1 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 0.2s;
}

.card .card2 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 0.6s;
}

.card .card3 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 1s;
}

.card .card4 {
    animation: reveal 1s ease-in-out forwards;
    animation-delay: 1.4s;
}

@keyframes reveal {
    0% {
        transform: scale(0.8) translateY(100px);
        opacity: 0;
    }
    100% {
        transform: scale(1) translateY(0);
        opacity: 1;
    }
}

 .card img{
    width: 10rem;
    align-self: center;
    margin-bottom: :0;
 }
.card.show {
    opacity: 1;
    transform: translateY(0);
}

</style>
<script>
document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".card");

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                entry.target.classList.add("show");
            }
        });
    }, {
        threshold: 0.2, // Trigger, nÃ¥r 20% af kortet er synligt
    });

    cards.forEach((card) => observer.observe(card));
});
</script>
---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Newsletterform from "../components/Newsletterform.astro";
import Menuitem from "../components/Menuitem.astro";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="https://use.typekit.net/dum4mjv.css" />
    <link rel="stylesheet" href="https://use.typekit.net/dum4mjv.css" />
    <title>Bake My Day</title>
  </head>
  <body>
    <header>
      <Header />
    </header>
    <main>
      <div class="logo-frontpage">
        <img src="../public/images/logoforside.png" alt="logo frontpage" />
      </div>
      <h1>Café</h1>
      <h2>ÅBNINGSTIDER</h2>
      <div class="openinghours-frontpage"></div>
      <h2>MENU</h2>
      <div class="Menulayout">
        <Menuitem
          imageSrc="/images/islandske.png"
          name="snegle"
          price="29"
          items={[
            "Chokolade (v)",
            "Hindbær (v)",
            "Oreo (v)",
            "Saltkaramel (v)",
          ]}
        />
        <Menuitem
          name="Donuts"
          price="36"
          items={[
            "Chokolade (v)",
            "Hindbær (v)",
            "Oreo (v)",
            "Saltkaramel (v)",
            "Månedens donut (v)",
          ]}
          imageSrc="/images/donuts.png"
        />
        <Menuitem
          imageSrc="/images/cupkakes.png"
          name="cupcakes"
          price="36"
          items={[
            "FASTE VARIENTER",
            "Vanilje blåbær passionfrugt (v)",
            "Double chokolade (v)",
            "Red velvet med flødeostecreme",
            "Chokoladekage med oreocreme (v)",
            "SÆSON SMAGE",
            "Pistachie vaniljekage med pistachie creme",
            "Biscoff vaniljekage med biscoff creme (v)",
          ]}
        />
        <Menuitem
          name="macarons"
          price="18"
          items={[
            "chokolade (G)",
            "Hindbær (G)",
            "Hvid chokolade (G)",
            "Saltkaramel (G)",
            "Blåbær (G)",
            "Pistachie (G)",
          ]}
          imageSrc="/images/macarons.png"
        />
        <Menuitem
          imageSrc="/images/cookies.png"
          name="cookies"
          price="40"
          items={[
            "Biscoff Lotus cookie med fyld af biscoff creme",
            "Pecan nut cookie med fyld af nougat",
          ]}
        />
        <Menuitem
          name="brownies"
          price="49"
          items={[
            "Chokolade brownie med cornflakes og saltkaramel",
            "Chokolade brownie med pekan nødder og saltkaramel)",
          ]}
          imageSrc="/images/brownies.png"
        />
        <Menuitem
          imageSrc="/images/minikager.png"
          name="mini kager"
          price="350,-"
          items={[
            "Chokoladekage med chokoladecreme og chokoladedråber",
            "Vaniljekage med hindbærecreme og tørrede hindbær",
            "Red velvet med flødeostecreme",
          ]}
        />
        <Menuitem
          name="andre treats"
          price="25"
          items={["Cakepops", "Romkugler"]}
          imageSrc="/images/andretreats.png"
        />
        <Menuitem
          imageSrc="/images/savory.png"
          name="savory"
          price="25,-"
          items={[
            "Fuldkorns croissant (v) / 25DKK",
            "Islandske ostesløfjer (v) / 42DKK",
            "Rugbrødsboller (v)",
            "Surdejsboller (v)",
            "Smurt med smør og ost / +14DKK",
            "Smurt med smørost og avacado / +24DKK",
          ]}
        />
        <Menuitem
          name="kaffe"
          price="??"
          items={[
            "Americano",
            "Latte",
            "Cappuchino",
            "Flat white",
            "Espresso",
            "Iskaffe",
            "Varm chokolade / Mocha",
          ]}
          imageSrc="/images/kaffe.png"
        />
        <Menuitem
          imageSrc="/images/drikke.png"
          name="drinks"
          price="??"
          items={[
            "Chai Latte",
            "Turmeric Latte",
            "Matcha Latte",
            "Mynte Latte",
            "Lavender/Æble Latte",
            "Caramel Latte",
            "Hindbær Latte",
            "Citron Latte",
            "Sodavand",
          ]}
        />
      </div>

      <div class="instagramlogo">
        <img src="../public/images/instagram.png" alt="insta logo" />
      </div>
      <h2>FIND OS PÅ INSTAGRAM</h2>
      <div class="instagramgalleri">
        <img src="../public/images/galleri1.png" alt="" />
        <img src="../public/images/galleri2.png" alt="" />
        <img src="../public/images/galleri3.png" alt="" />
        <img src="../public/images/galleri4.png" alt="" />
        <img src="../public/images/galleri5.png" alt="" />
      </div>
      <h2>TILMELD DIG TIL BAKE MY NEWSLETTER</h2>
      <Newsletterform />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>

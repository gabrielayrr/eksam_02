---
import "../styles/global.css";
import Banner from "../components/banner.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Kagemenu from "../components/Kagemenu.astro";
import WebshopMenu from "../components/webshop-menu.astro";
import Cherrywebshop from "../components/Cherrywebshop.astro";
import Cherrybutton from "../components/Cherrybutton.astro";
import Personalcakes from "../components/Personalcakes.astro";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="src/styles/global.css"/>
    <link rel="stylesheet" href="https://use.typekit.net/dum4mjv.css">
    <link rel="stylesheet" href="https://use.typekit.net/dum4mjv.css">
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/site.webmanifest">

    <title>Bake My Day</title>
  </head>
  <body>
    <header>
      <Banner />
      <Header />
    </header>
    <main>
   <Kagemenu />
   <h1>WEBSHOP</h1>
   <WebshopMenu />

      <Cherrywebshop title="KAGE - GJORT NEMT"></Cherrywebshop >
      <Cherrywebshop image="public/images/cherry.webp" header="Vælg produkt" text="Start med at vælge den kage, du gerne vil bestille. Klik på produktet for at komme ind på detaljesiden."position="left"data-speed="0.2"></Cherrywebshop >
      <Cherrywebshop image="public/images/cherry.webp" header="Tilpas efter dine ønsker" text="Størrelse: Vælg den størrelse, der passer bedst til dine behov, direkte fra dropdown-menuen. Smag/farve: Har produktet flere varianter? Intet problem - du vælger blot din favorit fra listen. Tilføj detaljer: På vores mange af vores kager har du mulighed for at tilføje skrift på kagen. Skal der være et navn, en hilsen eller noget særligt på produktet? Indtast dine ønsker i feltet for personlige tilføjelser." position="right"data-speed="0.4"></Cherrywebshop>
      <Cherrywebshop image="public/images/cherry.webp" header="Planlæg din levering/afhenting" text="Vælg en dato, der passer dig bedst - om du ønsker det leveret hjem til døren eller selv vil afhente det i en af vores butikker."position="left"data-speed="0.6"></Cherrywebshop>
      <Cherrywebshop image="public/images/cherry.webp" header="Læg i kurv" text="Når du har tilpasset dit produkt, klikker du på “Læg i kurv”. Du kan fortsætte med at shoppe eller gå direkte til kassen for at færdiggøre din bestilling."position="right"data-speed="0.8"></Cherrywebshop>
      <Cherrywebshop end="Med vores enkle system er det hurtigt og nemt at få præcis det, du ønsker. Vi glæder os til at gøre din oplevelse så smidig som mulig! "></Cherrywebshop>

    <Personalcakes image="public/images/logoforside.webp" title="LEDER DU EFTER NOGET MERE PERSONLIGT?" subtitle="MANGLER DU KAGER TIL EN EKSTRA SPECIEL BEGIVENHED?" text="Hos Bake my Day kan vi lave netop det design, du ønsker, der måske har en særlig betydning for dig. Du kan sende os billeder af dine idéer. Dit valg af bryllupskager, dåbskager, konfirmationskager eller fødselsdagskager er derfor personligt og skræddersyet til dig. Send en besked til os, og vi vender tilbage dig, med et bud på din drømmekage." sluttext="Costum kager er til minimum 20 personer"></Personalcakes>
    <Cherrybutton class="cherrybutton" text="SEND OS EN MAIL"></Cherrybutton>
    



    <br><br><br><br><br><br><br>
    class....
    <h3>Har du generelle spørgsmål til os?
    <br><br>
    Find vores kontakt side her</h3>

    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>
